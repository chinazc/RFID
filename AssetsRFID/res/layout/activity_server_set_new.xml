<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightblue" >

                    <ImageView
                        android:id="@+id/imageViewBack"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_back" />

                    <TextView
                        android:id="@+id/textViewBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="返回"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageViewAssetsQuery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/iconsetup" />

                    <TextView
                        android:id="@+id/textViewAssetNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="22dp"
                        android:text="@string/serverset" />

                    <ImageButton
                        android:id="@+id/imageButtonReFresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="36dp"
                        android:src="@drawable/icon_asset" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/textViewServername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务器名称" />

                    <EditText
                        android:id="@+id/editTextSvrname"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewNamespace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="命名空间" />

                    <EditText
                        android:id="@+id/editTextNamespace"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务URL" />

                    <EditText
                        android:id="@+id/editTextSvrURL"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/buttonNewserver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_button"
                        android:text="新增" />

                    <Button
                        android:id="@+id/buttonSaveserver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_button"
                        android:text="保存" />

                    <TextView
                        android:id="@+id/textViewEditStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前服务器（双击列表选择）" />

                    <EditText
                        android:id="@+id/editTextSelServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10" />

                    <Button
                        android:id="@+id/buttonSaveSelServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_button"
                        android:text="保存" />

                    <Button
                        android:id="@+id/buttonDataManage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_button"
                        android:text="数据维护" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="700dp"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <ListView
                        android:id="@+id/listViewSetServer"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:background="@drawable/frameround"
                        android:drawSelectorOnTop="false"
                        android:listSelector="#00ffff" >
                    </ListView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
