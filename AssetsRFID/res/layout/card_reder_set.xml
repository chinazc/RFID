<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtDemoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red" />

    <Button
        android:id="@+id/btnGetRFID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDemoConnectButtonClicked"
        android:text="连接读卡器" />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDisconnectButtonClicked"
        android:text="断开读卡器" />
    <Button
        android:id="@+id/btnReadData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onInvetory"
        android:text="寻卡测试" />



    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setRFIDmode"
        android:text="RFID模式" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setBarCodemode"
        android:text="条码模式" />
        <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSetPaPowerButtonClicked"
        android:text="设置发射功率" />

</LinearLayout>