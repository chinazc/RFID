<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.WorldCloud.assetsrfid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp" >

    <LinearLayout
        android:layout_width="1600dp"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/main_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TableLayout
                android:layout_width="280dp"
                android:layout_height="1000dp"
                android:background="@color/white" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <ImageView
                        android:id="@+id/imageViewFaultManage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_workrequest" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="库存管理"
                        android:textColor="@color/darkgray"
                        android:textSize="30sp" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/textViewAssetNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="资产查询"
                        android:textColor="@color/darkgrey"
                        android:textSize="30sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" >

                    <TextView
                        android:id="@+id/textViewDialogMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_span="2"
                        android:text="按资产编号搜索"
                        android:textColor="@color/deepskyblue"
                        android:textSize="20sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/frameround" >

                    <EditText
                        android:id="@+id/inventoryInventoryCode"
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:gravity="bottom"
                        android:hint="请扫描或输入资产编码"
                        android:textColor="@color/black"
                        android:textSize="13sp" >
                    </EditText>

                    <ImageView
                        android:id="@+id/qrCode"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:onClick="onClickRFIDSet"
                        android:src="@drawable/erweima" />
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_span="2"
                        android:text="按其他条件搜索"
                        android:textColor="@color/deepskyblue"
                        android:textSize="20sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frameround"
                    android:orientation="vertical" >


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45dp" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="物料类别"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/materialsType"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/icon_forward"
                            android:gravity="center"
                            android:text="全部"
                            android:textColor="@color/blue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45dp" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="仓库号"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/warehouseNum"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/icon_forward"
                            android:gravity="center"
                            android:text="全部"
                            android:textColor="@color/blue" />
                    </LinearLayout>
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <Button
                            android:id="@+id/buttonInventoryExecQuery"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="@drawable/normal_button"
                            android:text="执行搜索" />

                        <Button
                            android:id="@+id/buttonInventoryReset"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="@drawable/normal_button"
                            android:text="清空条件" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFAF0"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textViewMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/query_itemcount_message"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/addImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/add"
                            android:visibility="gone"
                            android:gravity="center" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/frameround"
                        android:layout_margin="10dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/inventoryCode"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:text="编号"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/inventoryDes"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="说明"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/inventoryPalce"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="仓库/货位"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:orientation="horizontal" >
                                <TextView
                                    android:id="@+id/inventoryCount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:text="数量"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />


                                <TextView
                                    android:id="@+id/inventoryUnit"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:text="单位"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/inventorySafeCount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="安全库存量"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/split" />

                        <ListView
                            android:id="@+id/listViewInventoryresult"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:cacheColorHint="@android:color/transparent" 
                            android:layout_weight="1" >
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
                 <LinearLayout
                     android:id="@+id/listContainer"
                        android:layout_width="260dp"
                        android:layout_height="fill_parent"
                        android:visibility="gone"
                        android:gravity="center" >

                        <RelativeLayout
                            android:layout_width="260dp"
                            android:layout_height="310dp" >
                            <ListView
                                android:id="@+id/listViewQuery"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_background"
                                 >
                            </ListView>
                            <ImageView 
                                android:id="@+id/cancleImage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/add"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>