<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_demo_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewAssetNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="481dp"
        android:layout_gravity="left"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="406dp"
            android:layout_gravity="top"
            android:layout_weight="0.26"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="170dp" >

                <TextView
                    android:id="@+id/textViewUsername"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="120dp"
                    android:layout_height="34dp"
                    android:layout_weight="1.30"
                    android:background="@color/lightblue"
                    android:hint="请输入正确的用户名"
                    android:inputType="text"
                    android:textSize="20sp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/textViewDialogMessage"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="密   码"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@color/lightblue"
                    android:ems="10"
                    android:hint="请输入合法密码"
                    android:inputType="textPassword"
                    android:textSize="20sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxSaveUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:text="记住密码"
                android:textColor="#382DFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.83"
                    android:background="@drawable/normal_button"
                    android:textColor="@color/black"
                    android:text=" 登 录 " />

                <Button
                    android:id="@+id/buttonSetserver"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.83"
                    android:textColor="@color/black"
                    android:background="@drawable/normal_button"
                    android:text="设 置 " />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:layout_marginLeft="120dp"
            android:layout_weight="0.55"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="196dp"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.48" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textViewErrorMessage"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:singleLine="false"
                        android:textColor="@color/crimson"
                        android:textSize="20sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:visibility="invisible" />

</LinearLayout>